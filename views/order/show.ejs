<div class="container">
  <div class="card shopping-cart">
    <div id="crt" class="card-header text-light">
      <i class="fa fa-shopping-cart" aria-hidden="true"></i>
      <h4 class="crt">Cart</h4>
      <div class="clearfix"></div>
    </div>
    <div class="card-body">
      <!-- PRODUCT -->
      <% order.arts.forEach(function (art, i){%>
      <div class="row">
        <div class="col-12 col-sm-12 col-md-2">
          <img id="img__crt"
            class="img-responsive" alt="Cinque Terre"
            src="<%= art.image %>"
            alt="prewiew"
            width="150px"
            height="150px"/>
        </div>
        <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
          <h4 class="product-name">
            <a href="/art/show/<%= art._id %>"
              ><strong><%= art.title %></strong></a
            >
          </h4>
          <h4>
            <small><%= art.description %></small>
          </h4>
        </div>
        <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
          <div
            class="col-3 col-sm-3 col-md-6 text-md-right"
            style="padding-top: 5px"
          >
            <h6>
              <strong
                >$<%= art.price %>.00 <span class="text-muted"></span
              ></strong>
            </h6>
          </div>
        </div>
      </div>
      <hr />
      <%})%>
      <!-- END PRODUCT -->
    </div>
    <div class="card-footer">
      <div class="pull-right" style="margin: 10px">
        <a href="" id="signup" class="crt">Checkout</a>
        <div class="pull-right" style="margin: 5px">
          Total price: <b>$<%= order.totalPrice %></b>
        </div>
      </div>
    </div>
  </div>
</div>
