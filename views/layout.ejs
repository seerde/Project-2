<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>Art Gallery</title>
    <script
      src="https://code.jquery.com/jquery-3.4.1.js"
      integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <% if(alerts.updated){ %> <% alerts.updated.forEach(function(msg){ %>
    <div class="alert alert-success">
      <%= msg %>
    </div>
    <% }); %> <% } %> <% if(alerts.success){ %> <%
    alerts.success.forEach(function(msg){ %>
    <div class="alert alert-success">
      <%= msg %>
    </div>
    <% }); %> <% } %> <% if(alerts.error){ %> <%
    alerts.error.forEach(function(msg){ %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
    <% }); %> <% } %> <% if(alerts.autherror){ %> <%
    alerts.autherror.forEach(function(msg){ %>
    <div class="alert alert-danger">
      Your <%= msg.param %> has <%= msg.msg %>
    </div>
    <% }); %> <% } %>

    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="navbar__container">
        <div class="navbar__logo__container">
          <a class="navbar-brand" href="/home"
            ><img src="/images/logo.png" width="90" height="50"
          /></a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item nav__item active">
              <a class="nav-link" href="/home"
                >Home <span class="sr-only">(current)</span></a
              >
            </li>
            <li class="nav-item nav__item">
              <a class="nav-link" href="/art/create">Post</a>
            </li>
            <li class="nav-item nav__item">
              <a class="nav-link" href="/art/list">Art List</a>
            </li>
            <li class="nav-item nav__item">
              <a class="nav-link" href="/user/list">Artists List</a>
            </li>
          </ul>

          <% if(currentUser) {%>
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="/user/index"
                ><%= currentUser.firstname %></a
              >
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/order/show/"
                ><img
                  src="/images/shopping-cart.png"
                  alt="shoping cart icon"
                  width="30"
                  height="30"
              /></a>
            </li>
          </ul>
          <%} %> <% if(!currentUser) {%>
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="/auth/signin">Signin</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/auth/signup">Signup</a>
            </li>
          </ul>
          <%} %>
        </div>
      </div>
    </nav>

    <%- body %>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
    <script src="/js/alertAnimations.js"></script>
  </body>
</html>
