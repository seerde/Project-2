<div class="showArt__container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <img src="<%= art.image %>" width="100%" height="700" />
      </div>
      <div class="col-lg-8">
        <div class="text-center single__item__text">
          <div>
            <h3>
              <%= art.title %>
            </h3>
          </div>
          <div>
            <p>
              <%= art.description %>
            </p>
          </div>
          <div>
            For $<%= art.price %>
          </div>
          <div>
            By
            <a href="/user/show/<%= art.user._id %>"
              ><%= art.user.firstname %> <%= art.user.lastname %></a
            >
          </div>
          <div>
            <%if(currentUser.userType == "user"){%>
            <form action="/order/add/<%= art._id %>" method="POST">
              <button
                id="signup"
                class="btn btn-lg btn-primary btn-block"
                type="submit"
              >
                Add to Cart
              </button>
            </form>
            <%}%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
