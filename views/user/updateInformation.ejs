<h1>Hello <%= currentUser.firstname %></h1>
<div class="container">
  <div class="main__view">
    <div class="w3-bar-block w3-black left__view">
      <a href="/home" class="w3-bar-item w3-button">Home</a>
      <a href="/user/update" class="w3-bar-item w3-button"
        >Update Email and Password</a
      >
      <a
        href="/user/updateInformation"
        class="w3-bar-item w3-button"
        style="background-color: gray;"
        >Update informaction</a
      >
    </div>
    <div class="right__view">
      <div class="text-center">
        <form
          class="form-signin"
          method="POST"
          action="/user/updateinformation/<%= currentUser._id %>"
        >
          <h1 class="h3 mb-3 font-weight-normal">Update Informations</h1>
          <label for="inputName" class="sr-only">Old First name</label>
          <input
            type="string"
            id="inputName"
            class="form-control"
            placeholder="Old First name"
            required=""
            autofocus=""
            name="oldFirstname"
            value="<%= currentUser.firstname %>"
            disabled
          />
          <label for="inputName" class="sr-only">New First Name </label>
          <input
            type="Name"
            id="inputName"
            class="form-control"
            placeholder="New First Name"
            required=""
            autofocus=""
            name="newFirstname"
          />
          <label for="inputlast" class="sr-only">Old Last Name</label>
          <input
            type="string"
            id="inputlast"
            class="form-control"
            placeholder="Old Last Name"
            required=""
            name="oldLastname"
            value="<%= currentUser.lastname %>"
            disabled
          />
          <label for="inputLast Name" class="sr-only">New Last Name</label>
          <input
            type="string"
            id="inputLast Name"
            class="form-control"
            placeholder="New Last Name"
            required=""
            name="newLastname"
          />

          <button
            id="signup"
            class="btn btn-lg btn-primary btn-block"
            type="submit"
          >
            Update
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
