<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />

<div class="bestSeller__container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="bestSeller__tittle text-center">
          <h2>Best Seller</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <%arts.forEach(art => {%>
      <div class="col-lg-4 col-sm-6">
        <div class="single__item">
          <div>
            <a href="/art/show/<%= art._id %>"
              ><img src="<%= art.image %>" width="100%" height="300px"
            /></a>
          </div>
          <p><%= art.title %></p>
          <a href="/art/show/<%= art._id %>"><h3><%= art.description %></h3></a>
          <p>For $<%= art.price %></p>
          <div>
            <%if(currentUser.userType == "user"){%>
            <form action="/order/add/<%= art._id %>" method="POST">
              <button id="signup" class="btn btn-lg btn-primary btn-block" type="submit">
                Add to Cart
              </button>
            </form>
            <%}%>
          </div>
        </div>
      </div>
      <%})%>
    </div>
  </div>
</div>

<nav id="loguser">
  <div>
    <h1>ARTISTS WE WORK WITH</h1>
    <div class="artists__container">
      <% users.forEach(user => { %> <%if(user.userType == "artist"){%>
      <div class="artist__box">
        <div>
          <a href="/user/show/<%= user._id %>">
            <img src="<%= user.image %>" height="200px" width="200px" />
          </a>
        </div>
        <div>
          <div>Email Address:</div>
          <div><%= user.email %></div>
        </div>
        <div>
          <div>Phone Number:</div>
          <div><%= user.phone %></div>
        </div>
      </div>
      <%}%> <% }) %>
    </div>
  </div>
</nav>

